# Copy this file to .env and adjust values for your environment.
# Unset keys fall back to the defaults defined in src/zmqNotifier/config.py.

# Broker settings ---------------------------------------------------------
# Broker timezone offset from UTC in hours (e.g., 3 for UTC+3, 11 for UTC+11)
ZMQ_NOTIFIER_BROKER__BROKERTIME_TZ=3

# ZMQ connection settings ------------------------------------------------------
ZMQ_NOTIFIER_ZMQ__HOST=localhost
ZMQ_NOTIFIER_ZMQ__PUSH_PORT=32768
ZMQ_NOTIFIER_ZMQ__PULL_PORT=32769
ZMQ_NOTIFIER_ZMQ__SUB_PORT=32770
ZMQ_NOTIFIER_ZMQ__CLIENT_ID=zmq-notifier

# Storage configuration --------------------------------------------------------
ZMQ_NOTIFIER_STORAGE__DATA_PATH=./data
ZMQ_NOTIFIER_STORAGE__BACKEND=csv
ZMQ_NOTIFIER_STORAGE__COMPRESSION_ENABLED=true

# Validation defaults ----------------------------------------------------------
# Comma separated lists are parsed automatically by pydantic via JSON-style input.
# Example: ZMQ_NOTIFIER_VALIDATION__SUPPORTED_SYMBOLS='["BTCUSD","EURUSD"]'

# Notification providers -------------------------------------------------------
# Set these when enabling Telegram notifications.
# ZMQ_NOTIFIER_NOTIFICATIONS__TELEGRAM_BOT_TOKEN=your-token
# ZMQ_NOTIFIER_NOTIFICATIONS__TELEGRAM_CHAT_ID=your-chat-id

# Logging configuration --------------------------------------------------------
ZMQ_NOTIFIER_LOGGING__LEVEL=INFO
ZMQ_NOTIFIER_LOGGING__LOG_DIR=./logs
ZMQ_NOTIFIER_LOGGING__FILE_NAME=runtime.log
ZMQ_NOTIFIER_LOGGING__CONSOLE_ENABLED=false
# Example of raising log level for a specific module:
# ZMQ_NOTIFIER_LOGGING__LOGGERS__zmqNotifier.market_data=DEBUG

# Misc -------------------------------------------------------------------------
ZMQ_NOTIFIER_AUTO_CREATE_DIRS=true
